<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <!-- interface-requires gtk+ 3.0 -->
  <object class="GtkTextBuffer" id="textbuffer_text">
    <signal name="changed" handler="generate" swapped="no"/>
  </object>
  <object class="GtkWindow" id="window_text">
    <property name="can_focus">False</property>
    <signal name="destroy" handler="on_app_exit" swapped="no"/>
    <child>
      <object class="GtkTextView" id="textview_text">
        <property name="visible">True</property>
        <property name="can_focus">True</property>
        <property name="can_default">True</property>
        <property name="has_default">True</property>
        <property name="has_tooltip">True</property>
        <property name="wrap_mode">char</property>
        <property name="buffer">textbuffer_text</property>
      </object>
    </child>
  </object>
</interface>
